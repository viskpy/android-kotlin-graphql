<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/forecast_radius"
    card_view:cardElevation="@dimen/forecast_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/forecast_main_view_padding">


        <TextView
            android:id="@+id/country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="India" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/forecast_main_view_padding"
            android:weightSum="1">

            <TextView
                android:id="@+id/country_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                tools:text="" />

            <TextView
                android:id="@+id/country_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:drawableLeft="@drawable/currency"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                tools:text="" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>